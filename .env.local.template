# Sherlock Health Environment Configuration
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# REQUIRED: Supabase Configuration (Get from https://supabase.com/dashboard)
# =============================================================================
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# REQUIRED: At least ONE AI service (for medical analysis)
# =============================================================================

# Anthropic Claude (Recommended for medical analysis)
ANTHROPIC_API_KEY=your-anthropic-key-here

# OpenAI GPT (For conversational features)
OPENAI_API_KEY=your-openai-key-here

# Perplexity (For research-backed analysis)
PERPLEXITY_API_KEY=your-perplexity-key-here

# =============================================================================
# OPTIONAL: Voice Features
# =============================================================================
ELEVENLABS_API_KEY=your-elevenlabs-key-here

# =============================================================================
# OPTIONAL: Server Configuration (defaults work fine)
# =============================================================================
NODE_ENV=development
PORT=5000
CORS_ORIGIN=http://localhost:5173

# =============================================================================
# OPTIONAL: Feature Flags
# =============================================================================
ENABLE_AI_DIAGNOSIS=true
ENABLE_MEDICATION_TRACKING=true
ENABLE_VOICE_NOTES=true
ENABLE_LAB_PROCESSING=true
ENABLE_CHAT_FEATURES=true
ENABLE_VOICE_FEATURES=true

# =============================================================================
# OPTIONAL: Advanced Configuration
# =============================================================================
LOG_LEVEL=info
AI_ANALYSIS_TIMEOUT=60000
AI_CONFIDENCE_THRESHOLD=0.7
