# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/medassist_db"

# PostgreSQL Connection Details (if using separate variables)
PGHOST=localhost
PGPORT=5432
PGDATABASE=medassist_db
PGUSER=username
PGPASSWORD=password

# Supabase Configuration
VITE_SUPABASE_URL=your-supabase-project-url
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Encryption Key for sensitive data
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Medical API Keys (register at respective services)
UMLS_API_KEY=your-umls-api-key-from-uts.nlm.nih.gov
FDA_API_KEY=your-fda-api-key-from-open.fda.gov
NCBI_API_KEY=your-ncbi-api-key-for-pubmed

# Environment Configuration
NODE_ENV=development
PORT=5000

# Application Configuration
APP_NAME=MedAssist
APP_VERSION=1.0.0

# Security Configuration
SESSION_SECRET=your-session-secret-here

# Email Configuration (for future email features)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# CORS Configuration
CORS_ORIGIN=http://localhost:5000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Medical Disclaimer
MEDICAL_DISCLAIMER_VERSION=1.0
REQUIRE_DISCLAIMER_ACCEPTANCE=true

# Feature Flags
ENABLE_AI_DIAGNOSIS=true
ENABLE_MEDICATION_TRACKING=true
ENABLE_SYMPTOM_PHOTOS=false
ENABLE_VOICE_NOTES=false
ENABLE_TELEMEDICINE=false

# External Service URLs
MEDICAL_KNOWLEDGE_API_URL=https://api.medicalknowledge.com
DRUG_INTERACTION_API_URL=https://api.druginteractions.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30

# Analytics (if using analytics services)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# Push Notifications (for future mobile app)
FIREBASE_PROJECT_ID=your-firebase-project
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# Development Only
DEBUG=false
